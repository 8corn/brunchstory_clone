<p id="notice"><%= notice %></p>

<p>
  <strong>카테고리 :</strong>
  <%= @category.name %>
</p>

<%= link_to '글 작성', new_category_post_path(@category), class: 'write_btn' %>

<h3>게시글 목록</h3>
<% @category.posts.each do |post| %>
  <div class="post">
	  <h3><%= link_to post.title, category_post_path(@category, post) %></h3>
	  <p><%= truncate(post.content, length: 300) %></p>
	</div>
<% end %>