<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<h2>포스트 작성</h2>

	<%= form_with(model: [@category, Post.new], local: true) do |form| %>
	  <div>
		<%= form.label :title, "제목" %>
		<%= form.text_field :title %>
	  </div>
	  <div>
		<%= form.label :content, "내용" %>
		<%= form.text_area :content %>
	  </div>
	  <%= form.submit "글 작성" %>
	<% end %>

<h2>포스트 목록</h2>
	<% @category.posts.each do |post| %>
	  <div>
		<h3><%= link_to post.title, post_path(post) %></h3>
		<p><%= post.content %></p>
	  </div>
	<% end %>