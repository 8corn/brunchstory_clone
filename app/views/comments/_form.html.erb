<%= form_with(model: [@post.category, @post, @comment], local: true) do |form| %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.hidden_field :article_id, value: @post.id %>
  </div>

  <div class="actions">
    <%= form.submit '댓글 달기' %>
  </div>
<% end %>
